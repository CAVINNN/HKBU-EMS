<div class="admin">
  <div class="row">
    <div class="col-md-12">
      <table class="table table-striped admin-table">
        <tbody>
        <% events.forEach(function(event) { %>
          <tr>
            <th><%= event.id %></th>
            <td><a href="/detail/<%= event.id %>"><%= event.eventName %></a></td>
            <td>
              <a href="/update/<%= event.id %>"><button class="btn btn-primary">Update</button></a>
              <form action="/delete/<%= event.id %>" method="POST" id="admin-delete-form-<%= event.id %>"><button class="btn btn-danger" onclick="disp_comfirm(event, <%= event.id %>)">Delete</button></form>
            </td>
          </tr>
        <% }); %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<style>

  .admin{
    margin-top: 3%;
  }

  .admin-table tbody tr td{
    font-weight: bold;
    color: #3e73ff;
  }

  form {
    display: inline;
  }

</style>

<script type="text/javascript">
  
  function disp_comfirm(event, id) {
    event.preventDefault();
    let r = confirm("Do you want to delete this event?");
    if( r === true ){
      document.getElementById("admin-delete-form-" + id).submit();
    }
  }

</script>
